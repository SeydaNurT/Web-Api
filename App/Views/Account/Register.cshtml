@model App.Models.UserRegister

<div class="display-6">
    Register
</div>

<form method="post" asp-action="Register">
    <div class="text-danger" asp-validation-summary="All"></div>

    
    <div class="form-group my-4">
        <label for="Username">Username</label>
        <input id="Username" name="Username" class="form-control" asp-for="Username" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group my-2">
        <label for="FirstName">First Name</label>
        <input id="FirstName" name="FirstName" class="form-control" asp-for="FirstName" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group my-2">
        <label for="Surname">Surname</label>
        <input id="Surname" name="Surname" class="form-control" asp-for="Surname" required />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group my-2">
        <label for="Password">Password</label>
        <input id="Password" name="Password" class="form-control" asp-for="Password" type="password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-control">
        <button class="btn btn-primary" type="submit">Register</button>
        <a class="btn btn-warning" href="@Url.Action("PostRegistration", "Dashboard")">Home</a>
    </div>
</form>

@if (ViewData.ModelState.Count > 0)
{
    <ul>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <li>@error.ErrorMessage</li>
        }
    </ul>
}
